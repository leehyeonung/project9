<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.ezen.book.repository.BookDAO">
	
	<select id="selectBookListPaging" resultType="com.ezen.book.domain.BookVO">
			select*from book where
			book_title like CONCAT('%', #{param1}, '%')
			order by book_num desc limit #{arg1},#{arg0}
	</select>
	
	<select id="searchBookTotalCount" resultType="int">
	select count(book_num) from book where book_title like CONCAT('%', #{param1}, '%')
	</select>
	
	</mapper>